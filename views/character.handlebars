<div class="full-container">
    <h1>{{character.name}} - {{character.class}}</h1>

    <div class="character-main">
        <div class="character-stats">
            <h2>Statistics</h2>
            <form id="characterForm">
                <div>
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" value="{{character.name}}"
                        oninput="updateStat('name', this.value)">
                </div>
                <div>
                    <label for="class">Class</label>
                    <input type="text" name="class" id="class" value="{{character.class}}"
                        oninput="updateStat('class', this.value)">
                </div>
                <div>
                    FOR
                    <label for="str-base">Base</label>
                    <input type="number" name="str-base" id="str-base" value="{{character.stats.str.base}}"
                        oninput="updateStat('stats.str.base', this.value)">
                    <label for="str-mod">Mod</label>
                    <input type="number" name="str-mod" id="str-mod" value="{{character.stats.str.mod}}"
                        oninput="updateStat('stats.str.mod', this.value)">
                </div>
                <div>
                    DES
                    <label for="des-base">Base</label>
                    <input type="number" name="des-base" id="des-base" value="{{character.stats.des.base}}"
                        oninput="updateStat('stats.des.base', this.value)">
                    <label for="des-mod">Mod</label>
                    <input type="number" name="des-mod" id="des-mod" value="{{character.stats.des.mod}}"
                        oninput="updateStat('stats.des.mod', this.value)">
                </div>
                <div>
                    COS
                    <label for="cos-base">Base</label>
                    <input type="number" name="cos-base" id="cos-base" value="{{character.stats.cos.base}}"
                        oninput="updateStat('stats.cos.base', this.value)">
                    <label for="cos-mod">Mod</label>
                    <input type="number" name="cos-mod" id="cos-mod" value="{{character.stats.cos.mod}}"
                        oninput="updateStat('stats.cos.mod', this.value)">
                </div>
                <div>
                    INT
                    <label for="int-base">Base</label>
                    <input type="number" name="int-base" id="int-base" value="{{character.stats.int.base}}"
                        oninput="updateStat('stats.int.base', this.value)">
                    <label for="int-mod">Mod</label>
                    <input type="number" name="int-mod" id="int-mod" value="{{character.stats.int.mod}}"
                        oninput="updateStat('stats.int.mod', this.value)">
                </div>
                <div>
                    SAG
                    <label for="sag-base">Base</label>
                    <input type="number" name="sag-base" id="sag-base" value="{{character.stats.sag.base}}"
                        oninput="updateStat('stats.sag.base', this.value)">
                    <label for="sag-mod">Mod</label>
                    <input type="number" name="sag-mod" id="sag-mod" value="{{character.stats.sag.mod}}"
                        oninput="updateStat('stats.sag.mod', this.value)">
                </div>
                <div>
                    CAR
                    <label for="car-base">Base</label>
                    <input type="number" name="car-base" id="car-base" value="{{character.stats.car.base}}"
                        oninput="updateStat('stats.car.base', this.value)">
                    <label for="car-mod">Mod</label>
                    <input type="number" name="car-mod" id="car-mod" value="{{character.stats.car.mod}}"
                        oninput="updateStat('stats.car.mod', this.value)">
                </div>
                <div>
                    <label for="dice">Danno</label>
                    <input type="number" name="dice" id="dice" value="{{character.dice}}"
                        oninput="updateStat('dice',this.value)">
                </div>
                <div>
                    <label for="armor">Armatura</label>
                    <input type="number" name="armor" id="armor" value="{{character.armor}}"
                        oninput="updateStat('armor',this.value)">
                </div>
                <div>
                    <label for="pfMax">PF MAX</label>
                    <input type="number" name="pfMax" id="pfMax" value="{{character.pfMax}}"
                        oninput="updateStat('pfMax',this.value)">
                </div>
                <div>
                    <label for="load">Carico</label>
                    <input type="number" name="load" id="load" value="{{character.load}}"
                        oninput="updateStat('load',this.value)">
                </div>
            </form>
        </div>
        <div class="character-details">
            <h2>Details</h2>
            <div>
                <button class="myButton" onclick="loadPDF()">Load PDF</button>
                <a class="myButton" href="/pdf/uploads/{{character.shortName}}_{{character._id}}.pdf" target="_blank">View PDF</a>
            </div>
            <div>
                <label for="exp">EXP</label>
                <input type="number" name="exp" id="exp" value="{{character.exp}}" oninput="updateStat('exp', this.value)" min="0">
                LIV: <span id="level">{{character.level}}</span>
                <button class="myButton" id="levelBtn" {{#unless (canLevelUp character)}}disabled{{/unless}} onclick="levelUp()">Level Up</button>
            </div>
        </div>
        
    </div>

    <div class="mid-footer">
        <div class="controller">
            <h1>PF: <span id="pfValue">{{character.pf}}</span> / <span id="pfMaxValue">{{character.pfMax}}</span></h1>
        </div>
        <div class="controller">
            <div>
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity-health" id="quantity-health">
            </div>
            <button class="myButton" onclick="heal()">Heal</button>
            <button class="myButton" onclick="damage()">Damage</button>
            <button class="myButton" onclick="setPF()">Set</button>
        </div>

        <div class = "controller">
            <div style="width: 100%;"><h2>Roll one or more dice:</h2></div>
            <div class="list-row">
                    <div class="inner-item" onclick="roll(4)">
                        <img src="/img/d4_blank.png" height="60px" width="60px">
                        <div class="dice-number"><p>4</p></div>
                    </div>
                    <div class="inner-item" onclick="roll(6)">
                        <img src="/img/d6_blank.png" height="60px" width="60px">
                        <div class="dice-number"><p>6</p></div>
                    </div>
                    <div class="inner-item" onclick="roll(8)">
                        <img src="/img/d8_blank.png" height="60px" width="60px">
                        <div class="dice-number"><p>8</p></div>
                    </div>
                    <div class="inner-item" onclick="roll(10)"> 
                        <img src="/img/d10_blank.png" height="60px" width="60px">
                        <div class="dice-number"><p>10</p></div>
                    </div>
                    <div class="inner-item" onclick="roll(12)">
                        <img src="/img/d12_blank.png" height="60px" width="60px">
                        <div class="dice-number"><p>12</p></div>
                    </div>
                    <div class="inner-item" onclick="roll(20)">
                        <img src="/img/d20_blank.png" height="60px" width="60px">
                        <div class="dice-number"><p>20</p></div>
                    </div>
            </div>
            <div>
                +
                <label for="type">Mod</label>
                <select name="Mod" id="mod-dice" onchange="setMod()">
                    <option value="{{character.stats.str.mod}}">FOR</option>
                    <option value="{{character.stats.des.mod}}">DES</option>
                    <option value="{{character.stats.cos.mod}}">COS</option>
                    <option value="{{character.stats.int.mod}}">INT</option>
                    <option value="{{character.stats.sag.mod}}">SAG</option>
                    <option value="{{character.stats.car.mod}}">CAR</option>
                    <option value="0">None</option>
                </select>
                +           
                <label for="type">Custom Mod</label> <input type="number" name="mod-dice-custom" id="mod-dice-custom" onchange="setMod()">
            </div>
            {{!-- <button class="myButton" onclick="roll()">Roll!</button> --}}
            <button class="myButton" onclick="resetDice()">Reset</button>
        </div>
        <div class="controller">
            <div style="display: contents;">
                <div class="list-row" id="dice-results">
                     
                </div>
                <span id="total-display" style="display: contents;"><h1 id="total-result"></h1></span>
               
            </div> 
        </div>


    <div class="action-footer">
        <div class="list-row">
            {{#each characters}}
            {{!-- <a href="/character/{{this._id}}" class="item"> --}}
            <div class="item">
                <div class="inner-item" id="Character{{this._id}}">
                </div>
                <div class="inner-item">
                    {{this.name}} - {{this.class}}
                </div>
                <div class="inner-item">
                    <p>PF: <span id="pfC{{this._id}}">{{this.pf}}</span> / <span
                            id="pfMaxC{{this._id}}">{{this.pfMax}}</span> - Liv: <span id="levelC{{this._id}}">{{this.level}}</span></p>
                </div>

                {{!-- </a> --}}
            </div>
            {{/each}}
        </div>
    </div>

</div>